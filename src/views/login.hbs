
{{> head }}
{{> nav }}

<main class="container">
  <div class="row">
    <div class="col-8 mx-auto my-3">
      <h1 class="display-1 text-center">Login</h1>
      <p class="text-center lead">
        Make your login or sign up to use Agenda.
      </p>

      <div class="row mt-5">
        <div class="col-lg">
          <h4>Sign up</h4>
          <p>If you don't have an account yet, fill your data below.</p>

          <form action="/login/register" method="POST">
            <input type='hidden' name='_csrf' value='{{csrfToken}}'>
            <div class="form-group">
              <label>Your email</label>
              <input type="email" class="form-control" name="email" />
            </div>
            <div class="form-group">
              <label>Your password</label>
              <input type="password" class="form-control" name="password" />
            </div>

            <button type="submit" class="btn btn-primary my-3">
              Create my account
            </button>
          </form>
        </div>

        <div class="col-lg">
          <h4>Make your login</h4>
          <p>If you already have an account fill the form below.</p>

          <form action="/login/login" method="POST">
            <input type='hidden' name='_csrf' value='{{csrfToken}}'>
            <div class="form-group">
              <label>Your email</label>
              <input type="email" class="form-control" name="email" />
            </div>
            <div class="form-group">
              <label>Your password</label>
              <input type="password" class="form-control" name="password" />
            </div>

            <button type="submit" class="btn btn-primary my-3">Enter my account</button>
          </form>
        </div>
      </div>
    </div>
  </div>
</main>

{{> footer }}
